<h1 class="pmarker text-center">EAT-DA-BURGER</h1>
<img src="/assets/img/burger_img.png">
<br><br>

<div class="container">
  <div class="row">
    <div class="col-sm-6 text-center">
      <h2 class="pmarker">Uneaten Burger List</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-6 text-center">
      <h2 class="pmarker">Devoured Burgers</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-sm-12 text-center">
      <h2 class="pmarker">Add a Burger to the List</h2>
      <form class="create-form">

        <div class="form-group">
          <input class="hidden" type="radio" name="devoured" checked="checked" value="0">
        </div>

        <div class="form-group pmarker">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <button type="submit" class="btn btn-success button-font">Add Burger</button>
      </form>
    </div>
  </div>
</div>